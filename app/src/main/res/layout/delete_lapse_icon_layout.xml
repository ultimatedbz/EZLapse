<?xml version="1.0" encoding="utf-8"?>
<com.manuelpeinado.multichoiceadapter.CheckableRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="2dp"
    android:orientation="vertical"
    android:foreground="@drawable/drawable_list_selector">

    <ImageView
        android:id="@+id/grid_item_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/doggy_butt"
        android:layout_gravity="center_vertical|left"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="false"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop">
    </ImageView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/grid_item_desc"
        android:text="Title"
        android:layout_gravity="right|center_vertical"
        android:textAlignment="center"
        android:textSize="50dp"
        android:paddingLeft="15dp"
        android:textColor="#FFF"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/grid_item_image"
        android:layout_toRightOf="@id/grid_item_image"/>

</com.manuelpeinado.multichoiceadapter.CheckableRelativeLayout>